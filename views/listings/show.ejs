<% layout("/layouts/biolerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><b><%=data.title%></b></h3>
  </div>

  <!-- <div class="card col-6 offset-2">
   <div class="show-card mt-3"> -->
  <!-- <div class="card" > //style="width: 18rem" -->
  <div class="card col-6 offset-3 listing-card" style="width: 32vmax">
    <img
      src="<%=data.image%>"
      class="card-img-top show-image"
      alt="Listing
      Details"
    />
    <div class="card-body">
      <p class="card-text">
        <%= data.description %> <br />
        &#8377;<%= data.price.toLocaleString("en-IN") %> <br />
        <%=data.location%> <br />
        <%=data.country%>
      </p>
    </div>
  </div>

  <div class="btns">
    <a href="/listings/<%=data._id%>/edit" class="btn btn-dark offset-3 add-btn"
      >Edit</a
    >

    <form method="POST" action="/listings/<%=data._id%>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-3 mb-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= data.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          class="form-range"
          name="review[rating]"
        />
      </div>
      <div>
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          class="form-control mb-2"
          id="comment"
          cols="30"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>
      <button class="btn btn-outline-dark btn-control">Submit</button>
    </form>

    <hr />
    <p><b>All Reviews</b></p>

  <div class="row">
    <%for(review of data.reviews){%>
    <div class="card col-5 mt-3 ms-2">
      <div class="card-body">
        <h5 class="card-title">Numan</h5>
        <p class="card-text"><%=review.comment%></p>
        <p class="card-text"><%=review.rating%> Stars</p>
        <form class="mb-2" method="POST" action="/listings/<%=data._id%>/review/<%=review._id %>?_method=DELETE">
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
    </div>
    <%}%>
  </div>
  </div>
</div>
